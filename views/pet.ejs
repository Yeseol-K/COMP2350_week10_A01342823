<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="bulma.min.css" />
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
  </head>
  <body>
    <section class="section">
      <div class="maincolumns columns is-desktop is-vcentered">
        <div class="column is-10 is-offset-1 notification is-info is-light box container">
          <div class="title">Pets</div>
          <% if (locals.pets && pets.length > 0) { %>
          <div class="table-container">
            <table class="table is-bordered is-hoverable is-striped is-narrow">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Name</th>
                  <th>Owner</th>
                </tr>
              </thead>
              <tbody>
                <% pets.forEach((pet, index) => { %>
                <tr>
                  <td><%= pet.pet_id %></td>
                  <td><%= pet.name %></td>
                </tr>
                <% }); %>
              </tbody>
              <tfoot>
                <tr>
                  <td colspan="3">There are <%= pets.length %> pets.</td>
                </tr>
              </tfoot>
            </table>
          </div>
          <% } else { %>
          <p>No pets found.</p>
          <% } %>
        </div>
      </div>
    </section>
  </body>
</html>
